{
    "name": "quori-pay",
    "version": "0.0.1",
    "description": "A Quasar Project",
    "productName": "Nova pay App",
    "author": "Roxnny A Barrios C <roxnny.barrios@gmail.com>",
    "private": true,
    "scripts": {
        "dev": "quasar dev",
        "build": "quasar build",
        "icons": "icongenie g -m cordova -i ./src/assets/icons/Qoripay.png --skip-trim --theme-color 161B22  --quality 12 --splashscreen-icon-ratio 30",
        "lint": "eslint --ext .js,.ts,.vue ./",
        "format": "prettier --write \"**/*.{js,ts,vue,scss,html,md,json}\" --ignore-path .gitignore",
        "test": "echo \"No test specified\" && exit 0",
        "dev:android": "quasar dev -m android -e emulator-5554",
        "device": "adb devices",
        "apk:build": "set BUILD_ANDROID=true && quasar build -m android",
        "apk:key": "keytool -genkey -v -keystore qoripayrelease.keystore -alias qoripay-release-key -keyalg RSA -keysize 2048 -validity 20000",
        "apk:release": "jarsigner -verbose -sigalg SHA1withRSA -digestalg SHA1 -keystore ./qoripayrelease.keystore dist/cordova/android/apk/release/app-release-unsigned.apk qoripay-release-key",
        "apk:optimize": "/home/**/Android/Sdk/build-tools/31.0.0/zipalign -v 4 dist/cordova/android/apk/release/app-release-unsigned.apk dist/cordova/android/apk/release/qori-pay.apk"
    },
    "dependencies": {
        "@quasar/extras": "^1.0.0",
        "axios": "^0.21.1",
        "dotenv": "^16.0.1",
        "pinia": "^2.0.11",
        "pinia-plugin-persistedstate-2": "^1.0.1",
        "quasar": "^2.6.0",
        "vue": "^3.0.0",
        "vue-i18n": "^9.0.0",
        "vue-router": "^4.0.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^16.2.3",
        "@commitlint/config-conventional": "^16.2.1",
        "@intlify/vite-plugin-vue-i18n": "^3.3.1",
        "@quasar/app-vite": "^1.0.0",
        "@types/node": "^12.20.21",
        "@typescript-eslint/eslint-plugin": "^5.10.0",
        "@typescript-eslint/parser": "^5.10.0",
        "autoprefixer": "^10.4.2",
        "eslint": "^8.10.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-vue": "^9.0.0",
        "husky": "^7.0.4",
        "prettier": "^2.5.1",
        "typescript": "^4.5.4"
    },
    "engines": {
        "node": "^18 || ^16 || ^14.19",
        "npm": ">= 6.13.4",
        "yarn": ">= 1.21.1"
    }
}
