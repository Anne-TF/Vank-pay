{
    "name": "quori-pay",
    "version": "0.0.1",
    "description": "A Quasar Project",
    "productName": "Qory pay App",
    "author": "Roxnny A Barrios C <roxnny.barrios@gmail.com>",
    "private": true,
    "scripts": {
        "dev": "quasar dev",
        "build": "quasar build",
        "icons": "icongenie g -m capacitor -i ./src/assets/icons/Icon.png --skip-trim --theme-color 1D2229  --quality 12 --splashscreen-icon-ratio 30",
        "lint": "eslint --ext .js,.ts,.vue ./",
        "format": "prettier --write \"**/*.{js,ts,vue,scss,html,md,json}\" --ignore-path .gitignore",
        "test": "echo \"No test specified\" && exit 0",
        "dev:android": "quasar dev -m capacitor -T android -e emulator-5554",
        "devices": "adb devices",
        "apk:key": "keytool -genkey -v -keystore qoripayrelease.keystore -alias qoripay-release-key -keyalg RSA -keysize 2048 -validity 20000",
        "apk:build": "set BUILD_ANDROID=true && quasar build -m capacitor -T android",
        "apk:optimize": "$ANDROID_HOME/build-tools/$ANDROID_SDK_VERSION/zipalign -f -v 4 dist/capacitor/android/apk/release/app-release-unsigned.apk dist/capacitor/android/apk/release/qori-pay.apk",
        "apk:release": "$ANDROID_HOME/build-tools/$ANDROID_SDK_VERSION/apksigner sign --ks ./qoripayrelease.keystore --ks-key-alias qoripay-release-key dist/capacitor/android/apk/release/qori-pay.apk",
        "apk": "yarn apk:build && yarn apk:optimize && yarn apk:release"
    },
    "dependencies": {
        "@capacitor/android": "^4.0.0-beta.0",
        "@capacitor/app": "^4.0.1",
        "@capacitor/cli": "^4.0.1",
        "@capacitor/clipboard": "^4.0.1",
        "@capacitor/core": "^4.0.1",
        "@capacitor/keyboard": "^4.0.1",
        "@capacitor/splash-screen": "^4.0.1",
        "@capacitor/status-bar": "^4.0.1",
        "@quasar/extras": "^1.0.0",
        "axios": "^0.21.1",
        "dotenv": "^16.0.1",
        "lodash": "^4.17.21",
        "pinia": "^2.0.11",
        "quasar": "^2.6.0",
        "remixicon": "^2.5.0",
        "vue": "^3.0.0",
        "vue-clipboard3": "^2.0.0",
        "vue-i18n": "^9.0.0",
        "vue-router": "^4.0.0",
        "vue3-lottie": "^2.1.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^16.2.3",
        "@commitlint/config-conventional": "^16.2.1",
        "@intlify/vite-plugin-vue-i18n": "^3.3.1",
        "@quasar/app-vite": "^1.0.0",
        "@types/node": "^12.20.21",
        "@typescript-eslint/eslint-plugin": "^5.10.0",
        "@typescript-eslint/parser": "^5.10.0",
        "autoprefixer": "^10.4.2",
        "eslint": "^8.10.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-vue": "^9.0.0",
        "husky": "^7.0.4",
        "prettier": "^2.5.1",
        "typescript": "^4.5.4"
    },
    "engines": {
        "node": "^18 || ^16 || ^14.19",
        "npm": ">= 6.13.4",
        "yarn": ">= 1.21.1"
    }
}
